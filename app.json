{
    "name": "Nibs",
    "description": "Customer loyalty application",
    "addons": ["heroku-postgresql:hobby-dev"],
    "env": {
        "DATABASE_URL": {
            "required": true
        },
        "CONTACTS_ACCOUNT_ID" : {
            "required": true
        }
    },
    "scripts": {
        "postdeploy": "pg_dump -cOx $DATABASE_URL | psql $DATABASE_URL && bundle exec rails db:migrate"
    }
}
